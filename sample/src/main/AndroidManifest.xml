<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eagleteam.calendarview.sample"
    >

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name="com.eagleteam.calendarview.sample.BasicActivity"
        android:label="@string/app_name"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name="com.eagleteam.calendarview.sample.OldCalendarViewActivity"
        android:label="@string/title_activity_old_calendar"
        android:parentActivityName="com.eagleteam.calendarview.sample.MainActivity"
        >

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.eagleteam.calendarview.sample.MainActivity"
          />

      <intent-filter>
        <action android:name="android.intent.action.RUN"/>
        <category android:name="com.eagleteam.calendarview.sample.SAMPLE"/>
      </intent-filter>

    </activity>

    <activity
        android:name="com.eagleteam.calendarview.sample.MainActivity"
        android:label="@string/title_activity_basic"
        >

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.eagleteam.calendarview.sample.MainActivity"
          />

      <intent-filter>
        <action android:name="android.intent.action.RUN"/>
        <category android:name="com.eagleteam.calendarview.sample.SAMPLE"/>
      </intent-filter>

    </activity>

    <activity
        android:name="com.eagleteam.calendarview.sample.BasicActivityDecorated"
        android:label="@string/title_activity_decorators"
        android:parentActivityName="com.eagleteam.calendarview.sample.MainActivity"
        >

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.eagleteam.calendarview.sample.MainActivity"
          />

      <intent-filter>
        <action android:name="android.intent.action.RUN"/>
        <category android:name="com.eagleteam.calendarview.sample.SAMPLE"/>
      </intent-filter>

    </activity>

    <activity
        android:name="com.eagleteam.calendarview.sample.MultipleViewActivity"
        android:label="@string/title_activity_multiple_view"
        android:parentActivityName="com.eagleteam.calendarview.sample.MainActivity"
        >

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.eagleteam.calendarview.sample.MainActivity"
          />

      <intent-filter>
        <action android:name="android.intent.action.RUN"/>
        <category android:name="com.eagleteam.calendarview.sample.SAMPLE"/>
      </intent-filter>
    </activity>

  </application>

</manifest>
